package models

import (
	"time"

	"github.com/l1rn/order-handler/internal/models"
	"gorm.io/gorm"
)

type UserRole int

var roleName = map[models.UserRole]string{
	RoleUser:      "user",
	RoleModerator: "moder",
	RoleAdmin:     "admin",
}

const (
	RoleUser UserRole = iota
	RoleModerator
	RoleAdmin
)

type User struct {
	gorm.Model
	Username   string       `gorm:"unique"`
	Password   string       `gorm:"not null"`
	Role       UserRole     `gorm:"default:0"`
	Submission []Submission `gorm:"foreignKey:UserID"`
	CreatedAt  time.Time
	UpdatedAt  time.Time
}

type UserResponse struct {
	ID       uint   `json:"id"`
	Username string `json:"username"`
	Role     string `json:"role"`
}

func (r UserRole) String() string {
	if name, ok := roleName[r]; ok {
		return name
	}
	return "unknown"
}
